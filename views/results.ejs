<!DOCTYPE html>
<html>
<head>
	<title>Results</title>
</head>
<body>
	<div>
		
		<h1>Results for <%= query %></h1>
		
		<h2>(Page <%= page %>)</h2>

		<a href="/">
			<button>
				&larr; Back Home
			</button>
		</a>
		<% results.forEach(m => { %>
			<div>
				<h2>
					<%= m.Title %> (<%= m.Year %>)
				</h2>
				<img src="<%= m.Poster %>" alt="Poster">
				<form method="POST" action="/faves">
					<input type="hidden" name="title" value="<%= m.Title %>">
					<input type="hidden" name="year" value="<%= m.Year %>">
					<input type="hidden" name="poster" value="<%= m.Poster %>">
					<button type="submit">ðŸ§¡</button>
				</form>
			</div>
			<hr>
	    <% }) %>
	    
	    <% if (page > 1) { %>
	    <a href="/search?query=<%=query%>&page=<%=page-1%>">
			<button>
				&larr; Previous Page
			</button>
		</a>
		<% } %>
		
		<a href="/search?query=<%=query%>&page=<%=page+1%>">
			<button>
				&rarr; Next Page
			</button>
		</a>
	</div>

</body>
</html>